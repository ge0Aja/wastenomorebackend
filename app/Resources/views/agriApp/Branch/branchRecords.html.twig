<div class="container-fluid">

    <table id="branchRecords" style="width: 100%" class="display table table-striped table-bordered">
        <h1>Branches</h1>
        <thead>
        <th>ID</th>
        <th>Company Name</th>
        <th>Staff Count</th>
        <th>Date of Opening</th>
        <th>City</th>
        <th>District</th>
        <th>Governorate</th>
        <th></th>
        </thead>
        <tbody>

        </tbody>
    </table>

</div>

<script>

    $(document).ready(function () {

        var tHead = $('#branchRecords thead th');
        tHead.not(":eq(0),:eq(7)").each(function () {
            var title = $(this).text();
            //console.log(title);
            $(this).html('<input style="width:100%" type="text" placeholder='+ "\"" + title + "\"" +  '>');
        });

        var table = $('#branchRecords').DataTable({

            "deferRender": true,

            "ajax" :
                {
                    "url": "/BranchRecords",
                    "type": "GET"
                },

            "columns": [
                {"data": "id"},
                {"data": "company_name"},
                {"data": "staff_count"},
                {"data": "opening_date"},
                {"data": "city_location"},
                {"data": "district_location"},
                {"data": "governorate_location"}

            ],
            order: [],
            "pageLength": 15,
            "lengthMenu": [[15, 25, 50, -1], [15, 25, 50, "All"]],
            columnDefs: [{
                id: "DT_RowId",
                "targets": [0],
                "orderable": false,
                "searchable": false,
                "visible": false
            },
                {
                    "targets": [1, 2, 3, 4, 5, 6],
                    "orderable": false
                },
                {
                    "targets":[7],
                    "data": null,
                    "defaultContent":'<button type="button" data-toggle="modal" class="btn-group-xs btn bg-danger pull-right"><b><i class="fa fa-times"></i></b></button>',
                    "orderable":false
                }
            ]
        });
        table.columns().every(function () {
            var that = this;

            $('input', this.header()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });

            $('select', this.header()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    console.log(this.value);
                    if (this.value === "") {
                        that.search('').draw();
                    }
                    else that.search("^" + this.value + "$", true, false).draw();
                }
            });

        });
    });


</script>

<script>
    $('#branchRecords tbody').on( 'click', 'button', function () {
        var table = $('#branchRecords').DataTable();
        var data = table.row( $(this).parents('tr') ).data();
        deleterow(data.id);
    });


    function deleterow(e) {
        var table = $('#branchRecords').DataTable();
        if (confirm('Are you sure you want to delete this?')) {
            $.ajax({
                url: '/deleteBranch/'+e,
                type: 'POST',
                success: function (data) {
                    if(data.status == 'success') {
                        table.ajax.reload(null, false);
                    }if(data.status == 'error'){
                        //display the message
                    }
                }
            });
        }
    }

</script>
