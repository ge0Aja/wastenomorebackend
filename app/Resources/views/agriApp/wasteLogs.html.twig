{{ include(':agriApp:base_head.html.twig') }}

<div class="container-fluid">

    <table id="wasteLogs" class="display table table-striped table-bordered" style="width: 100%;">
        <h1>Wastes</h1>
        <thead>
        <th>ID</th>
        <th>Type</th>
        <th>Category</th>
        <th>SubCategory</th>
        <th>Unit</th>
        <th>Branch</th>
        <th>Date</th>
        <th>Quantity</th>
        <th>Reason</th>
        <th> </th>
        </thead>
        <tbody>
            {% for wasteLog in wasteLogs %}
                <tr>
                    <td>{{ wasteLog.id }}</td>
                    <td>{{ wasteLog.wasteType.name }}</td>
                    <td>{{ wasteLog.wasteTypeCategory.name }}</td>
                    <td>{{ wasteLog.wasteTypeSubcategory.name }}</td>
                    <td>{{ wasteLog.unit.name }}</td>
                    <td>{{ wasteLog.branch }}</td>
                    <td>{{ wasteLog.wasteDate|date('d-m-Y')}}</td>
                    <td>{{ wasteLog.quantity }}</td>
                    <td>{{ wasteLog.reason }}</td>
                    <td><button type="button" data-toggle="modal"
                                data-target="#deleteTreat" onclick="deleterow({{ wasteLog.id }})"
                                class="btn-group-xs btn bg-danger pull-right"><b><i
                                        class="fa fa-times"></i></b></button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
<script>
    $(document).ready(function () {

        var tHead = $('#wasteLogs thead th');
        tHead.not(":eq(0),:eq(9)").each(function () {
            var title = $(this).text();
            //console.log(title);
            $(this).html('<input style="width:100%" type="text" placeholder=' + title + '>');
        });

        var table = $('#wasteLogs').DataTable({

            "deferRender": true,

            "ajax" :
                {
                  "url": "/renderWasteLogs",
                    "type": "GET"
                },

            "columns": [
                {"data": "id"},
                {"data": "wasteType"},
                {"data": "wasteTypeCategory"},
                {"data": "wasteTypeSubcategory"},
                {"data": "unit"},
                {"data": "branch"},
                {"data": "wasteDate"},
                {"data": "quantity"},
                {"data": "reason"}
            ],
            order: [],
            "pageLength": 15,
            "lengthMenu": [[15, 25, 50, -1], [15, 25, 50, "All"]],
            columnDefs: [{
                id: "DT_RowId",
                "targets": [0],
                "orderable": false,
                "searchable": false,
                "visible": false
            },
                {
                    "targets": [1, 2, 3, 4, 5, 6],
                    "orderable": false
                },
                {
                    "targets":[9],
                    "orderable":false
                }
                ]
        });
        table.columns().every(function () {
            var that = this;

            $('input', this.header()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });

            $('select', this.header()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    console.log(this.value);
                    if (this.value === "") {
                        that.search('').draw();
                    }
                    else that.search("^" + this.value + "$", true, false).draw();
                }
            });

        });
    });

</script>

<script>
   function deleterow(e) {
       var table = $('#wasteLogs').DataTable();
       if (confirm('Are you sure you want to delete this?')) {
           $.ajax({
               url: '/deleteWasteLog/'+e,
               type: 'POST',
               success: function (data) {
                   //alert('success');
                   table.ajax.reload(null,false);
               }
           });
       }
   }
</script>

